{
  "name": "pixelartcanvas",
  "version": "1.0.3",
  "description": "A react canvas component that renderizes pixel arts.",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "types": "dist/types.d.ts",
  "author": "mpDevDotDev <mpdev@mpdev.dev> (https://github.com/mpdevDotDev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpdevDotDev/pixelartcanvas"
  },
  "scripts": {
    "watch": "rm -rf dist/ && parcel watch src/index.tsx",
    "build": "rm -rf dist/ && parcel build src/index.tsx",
    "serve": "parcel serve src/example/index.html",
    "eslint": "npx eslint ./src/**/*.{ts,tsx}",
    "eslint:fix": "npx eslint --fix ./src/**/*.{ts,tsx}",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch --collect-coverage",
    "test": "yarn eslint && yarn test:jest",
    "npmpublish": "yarn test && yarn build && yarn publish --access public"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
